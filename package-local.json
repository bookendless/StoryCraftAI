{
  "name": "ai-story-builder-local",
  "version": "1.0.0",
  "description": "AI Story Builder - Local Version",
  "main": "electron/main-simple.js",
  "scripts": {
    "start": "node -r tsx/register server/index.ts",
    "dev": "node -r tsx/register server/index.ts",
    "electron": "electron electron/main-simple.js",
    "app": "concurrently \"npm run start\" \"wait-on http://localhost:5000 && npm run electron\""
  },
  "dependencies": {
    "express": "^4.18.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "electron": "^28.1.4",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0"
  }
}